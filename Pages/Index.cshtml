                <script>
                                $(document).ready(function () {
                                    var disciplines = ["D&E", "Pipeline", "Piping", "Instrumentation", "Process", "Material and Corrosion", "Structural", "Electrical", "Mechanical"];
                                    var select = $("#Discipline");



